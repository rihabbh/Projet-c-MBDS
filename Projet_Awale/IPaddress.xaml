<Window x:Class="Projet_Awale.IPaddress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet_Awale"
        mc:Ignorable="d"
        Title="IPaddress" Height="300" Width="300">
    <Grid>
        <TextBlock Text="Entrez l'ip de votre adversaire " Width="248" Margin="22,84,22,161" TextAlignment="Center" FontFamily="Lucida Calligraphy" FontSize="14"/>
        <TextBox Text="{Binding Path=ip}" VerticalAlignment="Center" Margin="45,130,42,116" Height="23"/>
        <Button Click="Start" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="92,0,84,74" Width="116" >Jouer !!!</Button>
    </Grid>
</Window>
